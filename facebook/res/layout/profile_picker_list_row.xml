<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#FFFFFF">
    <ViewStub
            android:id="@+id/profile_pic_stub"
            android:inflatedId="@+id/profile_image"
            android:layout="@layout/profile_pic_layout"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    <TextView
            android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:paddingLeft="5dip"
            android:textStyle="bold"
            android:textColor="#000000"
            android:lines="1"
            android:textSize="18sp"
            android:gravity="left|center_vertical"/>
    <ViewStub
            android:id="@+id/checkbox_stub"
            android:inflatedId="@+id/picker_checkbox"
            android:layout="@layout/checkbox_layout"
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginRight="10dip"/>
</LinearLayout>
