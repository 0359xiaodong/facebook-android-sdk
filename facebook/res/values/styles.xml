<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="Facebook_blue">#3B5998</color>
    
    <color name="LoginFragment_connectedStateTextColor">#FFFFFF</color>
    <color name="LoginFragment_connectedStateShadowColor">#000000</color>
    <color name="LoginFragment_notConnectedStateTextColor">#A6AED7</color>
    <dimen name="LoginFragment_profilePicWidth">64dp</dimen>
    <dimen name="LoginFragment_profilePicHeight">64dp</dimen>
    
    <dimen name="LoginView_paddingLeft">46dp</dimen>
    <dimen name="LoginView_paddingRight">0dp</dimen>
    <dimen name="LoginView_paddingTop">0dp</dimen>
